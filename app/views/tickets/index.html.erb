<h1>Список билетов</h1>

<table>
  <thead>
  <th>Пассажир</th>
  <th>Пасспорт</th>
  <th>Поезд №</th>
  <th>Станция отпр.</th>
  <th>Станция назн.</th>
  <th>Дата приобретения</th>
  </thead>


  <tbody>
  <%@tickets.each do |ticket| %>
    <tr>
          <td><%= ticket.passenger_name %></td>
          <td><%= ticket.passenger_number %></td>
          <td><%= ticket.train.number %></td>
          <td><%= ticket.start_station.title %></td>
          <td><%= ticket.end_station.title %></td>
          <td><%= ticket.created_at %></td>
          <td><%= link_to 'Показать', ticket_path(ticket) %></td>
          <td><%= link_to 'Удалить', ticket_path(ticket), method: :delete, data:{ confirm: 'Вы точно хотите удалить билет?' } %></td>
    </tr>
  <%end%>
  </tbody>
  </table>

<p><%= link_to 'Поиск', search_path, class: 'btn btn-success', type: "button" %></p>