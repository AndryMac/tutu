<%= form_for(@train) do |f| %>
    <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= f.label :number %>
    <%= f.number_field :number %>
  </div>

    <div class="field">
      <%= f.label :current_station %>
      <%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
    </div>

    <div class="field">
      <%= f.label :route %>
      <%= f.collection_select :route_id, Route.all, :id, :title %>
    </div>

    <div class="field">
      <%= f.label :sorting_carriage, 'Нумерация с головы состава' %>
      <%= f.check_box :sorting_carriage, {checked: true}  %>
    </div>


  <div class="actions">
    <%= f.submit "#{@train.new_record? ? 'Добавить поезд' : 'Редактировать поезд'}" %>
  </div>
<% end %>
